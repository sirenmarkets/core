{
  "name": "@sirenprotocol/sdk",
  "version": "1.0.3",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:sirenmarkets/core.git",
  "author": "Siren Protocol <contact@sirenmarkets.com>",
  "license": "MIT",
  "dependencies": {},
  "scripts": {
    "build": "npm run compile && npm run generate-types && rollup -c && cp ./src/ethers/*.d.ts ./dist/ethers/",
    "compile": "truffle compile",
    "test": "scripts/test.sh",
    "coverage": "truffle run coverage --network development",
    "publish:package": "npm publish --access public",
    "remixd": "remixd -s . --remix-ide https://remix.ethereum.org",
    "generate-types": "npm run generate-types:ethers",
    "generate-types:ethers": "npx typechain \"build/contracts/*.json\" --target=ethers-v5 --outDir src/ethers",
    "deploy-local": "truffle migrate && truffle exec scripts/markets/create_markets.js --network ${NETWORK:-development}",
    "deploy-kovan": "NETWORK=kovan npm run deploy-local",
    "deploy-rinkeby": "NETWORK=rinkeby npm run deploy-local",
    "deploy-mainnet": "truffle migrate && truffle exec scripts/markets/mainnet_create_markets.js --network mainnet",
    "deploy-lpp-local": "truffle exec scripts/staking/create_staking_contracts.js --network ${NETWORK:-development}",
    "deploy-lpp-rinkeby": "NETWORK=rinkeby npm run deploy-lpp-local",
    "deploy-lpp-mainnet": "NETWORK=mainnet npm run deploy-lpp-local",
    "transfer-markets-ownership-local": "truffle exec scripts/markets/transfer_markets_ownership.js --network ${NETWORK:-development}",
    "transfer-markets-ownership-rinkeby": "NETWORK=rinkeby npm run transfer-markets-ownership-local",
    "transfer-markets-ownership-mainnet": "NETWORK=mainnet npm run transfer-markets-ownership-local",
    "clean:dependencies": "rm -rf ./node_modules && rm -rf ./*/**/node_modules",
    "clean:dist": "rm -rf ./*/**/dist && rm -rf ./packages/contracts/build && rm -rf ./packages/contracts/src/ethers",
    "clean": "npm run clean:dependencies && npm run clean:dist"
  },
  "peerDependencies": {
    "ethers": ">5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@chainlink/contracts": "^0.0.11",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@truffle/hdwallet-provider": "^1.1.0",
    "@typechain/ethers-v5": "3.0.0",
    "bn.js": "^4.11.0",
    "dotenv": "^8.2.0",
    "ethers": "5.0.7",
    "ganache-cli": "^6.9.1",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "husky": "^4.3.0",
    "prettier": "2.1.1",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.33.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.29.0",
    "solidity-coverage": "^0.7.12",
    "truffle": "5.1.49",
    "typechain": "4.0.0",
    "typescript": "^4.0.2",
    "web3": "^1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick 'src/**/*.{ts,tsx,js,jsx,md}' --staged",
      "pre-push": "npm run coverage"
    }
  }
}
